<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lagu_tasya"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="dasi.com.laguanak.LaguTasya">

    <TextView
        android:text="              Klik Lagu Favorite Mu :"
        android:textSize="10pt"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <Button
        android:text="Paman Datang"
        android:textSize="10pt"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/paman"
        android:background="@drawable/button"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/libur"
        android:layout_alignLeft="@+id/libur"
        android:layout_alignStart="@+id/libur" />

    <Button
        android:text="Anak Gembala"
        android:id="@+id/gembala"
        android:textSize="10pt"
        android:background="@drawable/button"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Jangan Takut Gelap"
        android:id="@+id/gelap"
        android:textSize="10pt"
        android:background="@drawable/button"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/gembira"
        android:layout_alignLeft="@+id/gembira"
        android:layout_alignStart="@+id/gembira" />

    <Button
        android:text="Gembira Berkumpul"
        android:id="@+id/gembira"
        android:textSize="10pt"
        android:background="@drawable/button"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/gembala"
        android:layout_alignLeft="@+id/gembala"
        android:layout_alignStart="@+id/gembala" />

    <Button
        android:text="Libur Telah Tiba"
        android:id="@+id/libur"
        android:textSize="10pt"
        android:background="@drawable/button"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/gelap"
        android:layout_alignLeft="@+id/gelap"
        android:layout_alignStart="@+id/gelap" />

</RelativeLayout>
