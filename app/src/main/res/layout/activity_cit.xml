<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="dasi.com.laguanak.Cit">


    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memainkan Musik!"
        android:textSize="10pt"
        android:id="@+id/textView"
        android:layout_below="@+id/ket" />

    <ImageView
        android:src="@drawable/jos"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:id="@+id/imageButton"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="PLAY"
        android:background="@color/colorPrimaryDark"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnplay"
        android:adjustViewBounds="false"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageButton"
        android:layout_toLeftOf="@+id/btnpause"
        android:layout_toStartOf="@+id/btnpause"
        android:layout_marginTop="31dp" />

    <Button
        android:text="PAUSE"
        android:background="@color/colorPrimaryDark"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnpause"
        android:adjustViewBounds="false"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/btnplay"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/btnplay" />

    <Button
        android:text="STOP"
        android:background="@color/colorPrimaryDark"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnstop"
        android:adjustViewBounds="false"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/btnpause"
        android:layout_toRightOf="@+id/btnpause"
        android:layout_toEndOf="@+id/btnpause"
        android:layout_alignTop="@+id/btnpause" />

</RelativeLayout>
